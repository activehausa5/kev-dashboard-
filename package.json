{
  "name": "system-analytics-dashboard",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "node scripts/download-ffmpeg.js"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "unzipper": "^0.12.3"
  },
  "build": {
    "appId": "com.yourname.analytics",
    "productName": "SystemIntel",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "ffmpeg",
        "to": "ffmpeg"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
